<Window x:Class="ChickenAndPoint.CategoryIconSelectorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChickenAndPoint.Admin"
        xmlns:converters="clr-namespace:ChickenAndPoint"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="Выбор Иконки Категории" Height="450" Width="680"
        WindowStartupLocation="CenterOwner"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        FontFamily="{materialDesign:MaterialDesignFont}" Icon="/logo3.png">

    <Window.Background>
        <ImageBrush ImageSource="background.png" Stretch="UniformToFill"/>
    </Window.Background>

    <Window.Resources>
        <converters:ImageUrlToBitmapConverter x:Key="ImageUrlConverter"/>

        <Style TargetType="Button" x:Key="SelectImageButtonStyle" BasedOn="{StaticResource MaterialDesignFlatButton}">
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
        </Style>
    </Window.Resources>

    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Выберите иконку из хранилища" Style="{StaticResource MaterialDesignHeadline6TextBlock}" Margin="0,0,0,15"/>

        <Grid Grid.Row="1">
            <TextBlock x:Name="LoadingStatus" Text="Загрузка иконок..." HorizontalAlignment="Center" VerticalAlignment="Center" Style="{StaticResource MaterialDesignSubtitle1TextBlock}" Foreground="{DynamicResource MaterialDesignBodyLight}" Visibility="Visible"/>

            <ScrollViewer x:Name="ImagesScrollViewer" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled" Visibility="Collapsed">
                <ItemsControl x:Name="ImagesItemsControl">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal" ItemWidth="100"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate DataType="{x:Type sys:String}">
                            <Border BorderBrush="{DynamicResource MaterialDesignDivider}" BorderThickness="3" CornerRadius="4" Margin="8">
                                <StackPanel>
                                    <Border Width="64" Height="64" CornerRadius="3" Margin="5">
                                        <Border.Background>
                                            <ImageBrush ImageSource="{Binding Converter={StaticResource ImageUrlConverter}, Mode=OneTime}" Stretch="Uniform"/>
                                        </Border.Background>
                                    </Border>
                                    <Button Style="{StaticResource SelectImageButtonStyle}"
                                             Content="Выбрать"
                                             CommandParameter="{Binding}"
                                             Click="SelectImageButton_Click"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button x:Name="UploadButton"
                     Style="{StaticResource MaterialDesignRaisedButton}"
                     Width="390" Margin="0,0,10,0"
                     Click="UploadButton_Click">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Upload" Margin="0,0,8,0"/>
                    <TextBlock Text="Загрузить новую иконку (рекомендуется 64x64)"/>
                </StackPanel>
            </Button>

            <Button x:Name="CancelButton" Content="Отмена" Style="{StaticResource MaterialDesignOutlinedButton}"
                    Width="100" Click="CancelButton_Click"/>
        </StackPanel>

    </Grid>
</Window>