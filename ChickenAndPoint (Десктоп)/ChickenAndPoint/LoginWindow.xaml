<Window x:Class="ChickenAndPoint.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChickenAndPoint"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Курочка и точка" Height="550" Width="380"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ResizeMode="NoResize"
        Icon="/logo3.png"
        Background="{DynamicResource MaterialDesignPaper}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Height="480">

            <Image Source="/logo2.png"
                   Height="150"
                   Stretch="Uniform"
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10"/>

            <TextBlock Text="Курочка и точка"
                       Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,5"/>

            <TextBlock Text="Авторизация"
                       Style="{StaticResource MaterialDesignSubtitle1TextBlock}"
                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,25"/>

            <materialDesign:Card Padding="25" UniformCornerRadius="8" Width="320" >
                <StackPanel>
                    <TextBox x:Name="EmailTextBox"
                             materialDesign:HintAssist.Hint="Email"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:TextFieldAssist.HasClearButton="True"
                             Margin="0,0,0,20"/>

                    <PasswordBox x:Name="PasswordTextBox"
                                 materialDesign:HintAssist.Hint="Пароль"
                                 Style="{StaticResource MaterialDesignFloatingHintPasswordBox}"
                                 Margin="0,0,0,25"/>

                    <Button x:Name="LoginButton"
                            Content="ВОЙТИ"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            HorizontalAlignment="Stretch"
                            Height="45"
                            materialDesign:ButtonAssist.CornerRadius="5"
                            Margin="0,10,0,0"
                            Click="LoginButton_Click"/>

                </StackPanel>
            </materialDesign:Card>

        </StackPanel>
    </Grid>
</Window>