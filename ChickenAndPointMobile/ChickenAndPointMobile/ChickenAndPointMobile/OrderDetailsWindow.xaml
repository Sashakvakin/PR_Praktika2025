<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ChickenAndPointMobile.ViewModels"
             xmlns:converters="clr-namespace:ChickenAndPointMobile.Converters"
             x:Class="ChickenAndPointMobile.OrderDetailsWindow"
             Title="{Binding OrderNumberDisplay, StringFormat='Заказ №{0}'}"
             BackgroundImageSource="background.png">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="InverseBoolConverter"/>
        </ResourceDictionary>
    </ContentPage.Resources>

    <Grid RowSpacing="0" BackgroundColor="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackLayout IsVisible="{Binding IsBusy}" VerticalOptions="Center" HorizontalOptions="Center" Grid.Row="0" Grid.RowSpan="2">
            <ActivityIndicator IsRunning="{Binding IsBusy}" Color="OrangeRed"/>
            <Label Text="Загрузка деталей..." TextColor="Gray"/>
        </StackLayout>

        <StackLayout IsVisible="{Binding HasLoadingError}" VerticalOptions="Center" HorizontalOptions="FillAndExpand" Padding="20" Grid.Row="0" Grid.RowSpan="2">
            <Label Text="{Binding LoadingError}" TextColor="Red" HorizontalTextAlignment="Center"/>
            <Button Text="Повторить" Command="{Binding LoadDetailsCommand}" Margin="0,10,0,0"/>
            <Button Text="Закрыть" Clicked="CloseButton_Clicked" Margin="0,5,0,0"/>
        </StackLayout>

        <ScrollView Grid.Row="0" IsVisible="{Binding IsBusy, Converter={StaticResource InverseBoolConverter}}"
                    BackgroundColor="Transparent">
            <StackLayout Padding="15" Spacing="15">

                <Frame CornerRadius="10" Padding="15" HasShadow="True" BackgroundColor="White">
                    <Grid ColumnSpacing="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0">
                            <Label Text="Статус" FontSize="Small" TextColor="Gray"/>
                            <Label Text="{Binding StatusName}" FontSize="Medium" FontAttributes="Bold" TextColor="OrangeRed"/>
                        </StackLayout>
                        <StackLayout Grid.Column="1" HorizontalOptions="End">
                            <Label Text="Тип" FontSize="Small" TextColor="Gray" HorizontalTextAlignment="End"/>
                            <Label Text="{Binding TypeName}" FontSize="Medium" FontAttributes="Bold" TextColor="Black" HorizontalTextAlignment="End"/>
                        </StackLayout>
                    </Grid>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True" BackgroundColor="White"
                       IsVisible="{Binding HasDeliveryAddress}">
                    <StackLayout>
                        <Label Text="Адрес доставки" FontSize="Small" TextColor="Gray"/>
                        <Label Text="{Binding Order.АдресДоставки}" FontSize="Body" TextColor="Black"/>
                    </StackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="Состав заказа" FontSize="Medium" FontAttributes="Bold" TextColor="Black"/>
                        <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,5,0,10"/>
                        <ListView ItemsSource="{Binding OrderItems}"
                                   HasUnevenRows="True"
                                   SelectionMode="None"
                                   SeparatorVisibility="None"
                                   BackgroundColor="Transparent">
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="vm:OrderDetailItemViewModel">
                                    <ViewCell>
                                        <Grid Padding="0,5" ColumnSpacing="10">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Label Grid.Column="0" Text="{Binding DishName}" FontSize="Body" TextColor="#333" VerticalOptions="Center"/>
                                            <Label Grid.Column="1" Text="{Binding QuantityDisplay}" FontSize="Body" TextColor="#555" VerticalOptions="Center"/>
                                            <Label Grid.Column="2" Text="{Binding TotalItemPriceDisplay}" FontSize="Body" FontAttributes="Bold" TextColor="#333" VerticalOptions="Center" HorizontalTextAlignment="End"/>
                                        </Grid>
                                    </ViewCell>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                        <BoxView HeightRequest="1" BackgroundColor="LightGray" Margin="0,10,0,5"/>
                        <Grid>
                            <Label Text="Итого:" FontSize="Medium" FontAttributes="Bold" TextColor="Black" VerticalOptions="Center"/>
                            <Label Text="{Binding TotalSumDisplay}" FontSize="Large" FontAttributes="Bold" TextColor="OrangeRed" HorizontalOptions="End" VerticalOptions="Center"/>
                        </Grid>
                    </StackLayout>
                </Frame>

                <Frame CornerRadius="10" Padding="15" HasShadow="True" BackgroundColor="White">
                    <StackLayout>
                        <Label Text="Время создания" FontSize="Small" TextColor="Gray"/>
                        <Label Text="{Binding CreatedAtDisplay}" FontSize="Body" TextColor="Black"/>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>

        <Button Grid.Row="1" Text="Закрыть"
                BackgroundColor="WhiteSmoke" TextColor="Gray" BorderColor="LightGray" BorderWidth="1"
                Clicked="CloseButton_Clicked"
                HorizontalOptions="FillAndExpand" VerticalOptions="End" Margin="15"/>

    </Grid>
</ContentPage>