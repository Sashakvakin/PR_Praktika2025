<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChickenAndPointMobile.ProfilePage"
             Title="Профиль">

    <ContentPage.Content>
        <StackLayout Padding="20">
            <Label Text="Информация пользователя"
                   FontSize="Large"
                   FontAttributes="Bold"
                   VerticalOptions="Start"
                   HorizontalOptions="CenterAndExpand"
                   Margin="0,0,0,20"/>

            <Grid ColumnSpacing="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Text="Имя:" FontAttributes="Bold"/>
                <Label Grid.Row="0" Grid.Column="1" x:Name="NameLabel" Text="Загрузка..." />

                <Label Grid.Row="1" Grid.Column="0" Text="Email:" FontAttributes="Bold"/>
                <Label Grid.Row="1" Grid.Column="1" x:Name="EmailLabel" Text="Загрузка..." />
            </Grid>

            <Label Text="История заказов будет здесь" Margin="0,30,0,0" HorizontalOptions="Center"/>


            <Button Text="Выйти"
                    BackgroundColor="LightGray" TextColor="Black"
                    Clicked="LogoutButton_Clicked"
                    HorizontalOptions="FillAndExpand"
                    VerticalOptions="EndAndExpand"
                    Margin="0,20,0,0"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>